{
  "version": 1,
  "disable_existing_loggers": false,
  "formatters": {
    "stdout": {
      "()": "uvicorn.logging.DefaultFormatter",
      "fmt": "v1 %(asctime)s %(levelprefix)s %(pathname)s:%(lineno)d: %(message)s",
      "use_colors": true
    },
    "file": {
      "()": "uvicorn.logging.AccessFormatter",
      "fmt": "v1 %(asctime)s %(levelprefix)s %(pathname)s:%(lineno)d: %(message)s"
    }
  },
  "handlers": {
    "error": {
      "formatter": "file",
      "class": "logging.handlers.TimedRotatingFileHandler",
      "filename": "logs/app_error.log",
      "when": "midnight",
      "interval": 1,
      "backupCount": 7
    },
    "info": {
      "formatter": "file",
      "class": "logging.handlers.TimedRotatingFileHandler",
      "filename": "logs/app.log",
      "when": "midnight",
      "interval": 1,
      "backupCount": 7
    },
    "stdout": {
      "formatter": "stdout",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout"
    },
    "stderr": {
      "formatter": "stdout",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stderr"
    }
  },
  "loggers": {
    "uvicorn": {
      "handlers": ["stdout", "stderr"],
      "level": "INFO"
    },
    "uvicorn.error": {
      "handlers": ["error"],
      "level": "ERROR"
    },
    "uvicorn.access": {
      "handlers": ["info"],
      "level": "INFO",
      "propagate": false
    }
  }
}
